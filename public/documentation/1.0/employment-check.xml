<endpoint>
    <name>Get employment status</name>
    <description>Checks the employment status of an individual in a payroll scheme.</description>
    <section id="resource">
        <title>Resource</title>
        <resource>GET /apprenticeship-levy/epaye/{empref}/employed/{nino}?fromDate={date}&amp;amp;toDate={date}</resource>
    </section>
    <section id="path-parameters">
        <title>Path Parameters</title>
        <table>
            <headings>
                <cell>Name</cell>
                <cell>Type</cell>
                <cell>Example</cell>
                <cell>Description</cell>
            </headings>
            <rows>
                <row>
                    <cell>
                        <code>empref</code>
                    </cell>
                    <cell>
                        <code>String</code>
                    </cell>
                    <cell>
                        <code>123/AB12345</code>
                    </cell>
                    <cell>A valid (URL encoded) employer reference for the PAYE scheme.</cell>
                </row>
                <row>
                    <cell>
                        <code>nino</code>
                    </cell>
                    <cell>
                        <code>String</code>
                    </cell>
                    <cell>
                        <code>XY654321Z</code>
                    </cell>
                    <cell>A valid National Insurance Number (nino) for the individual being checked.</cell>
                </row>
            </rows>
        </table>
    </section>
    <section id="query-parameters">
        <title>Query Parameters</title>
        <table>
            <headings>
                <cell>Name</cell>
                <cell>Type</cell>
                <cell>Default</cell>
                <cell>Example</cell>
                <cell>Optional</cell>
                <cell>Description</cell>
            </headings>
            <rows>
                <row>
                    <cell>
                        <code>fromDate</code>
                    </cell>
                    <cell>
                        <code>Date</code>
                    </cell>
                    <cell/>
                    <cell>
                        <code>
                            <nowrap>2016-01-31</nowrap>
                        </code>
                    </cell>
                    <cell>Yes</cell>
                    <cell>Starting date of the period to check employment for.</cell>
                </row>
                <row>
                    <cell>
                        <code>toDate</code>
                    </cell>
                    <cell>
                        <code>Date</code>
                    </cell>
                    <cell/>
                    <cell>
                        <code>
                            <nowrap>2016-01-31</nowrap>
                        </code>
                    </cell>
                    <cell>Yes</cell>
                    <cell>Ending date of the period to check employment for.</cell>
                </row>
            </rows>
        </table>
    </section>
    <section id="authorisation">
        <title>Authorisation</title>
        <authorisation>
            <type>USER</type>
            <scope>read:apprenticeship-levy</scope>
        </authorisation>
    </section>
    <section id="content-types">
        <title>Accepted Media Types</title>
        <list>
            <item>
                <code>application/vnd.hmrc.1.0+json</code>
            </item>
        </list>
    </section>
    <section id="response">
        <title>Response</title>
        <httpStatus>200 (OK)</httpStatus>
        <json><![CDATA[{
                "empref" : "123/AB12345",
                "nino" : "XY654321Z",
                "fromDate" : "2016-03-06",
                "toDate" : "2016-04-05",
                "employed" : true
            }
    ]
}]]></json>
        <table>
            <headings>
